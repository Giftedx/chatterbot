{
  "name": "discord-gemini-bot-mvp",
  "version": "0.1.0",
  "description": "Discord bot with Google Gemini AI integration (MVP - has TypeScript compilation issues)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "docker:build": "docker build -t discord-gemini-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f discord-bot",
    "deploy:prod": "npm run build && npm run docker:build && npm run docker:run",
    "deploy:analytics": "docker-compose --profile analytics up -d",
    "db:migrate": "npx prisma migrate deploy",
    "db:studio": "npx prisma studio",
    "docs": "typedoc"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/*.test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setup.ts"
    ],
    "testTimeout": 30000,
    "verbose": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "dependencies": {
    "@google/generative-ai": "^0.7.1",
    "@modelcontextprotocol/sdk": "^1.15.0",
    "@modelcontextprotocol/server-brave-search": "^0.6.2",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.7.1",
    "@prisma/client": "^6.11.0",
    "axios": "^1.10.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.4",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.55.0",
    "fast-check": "^4.2.0",
    "jest": "^29.7.0",
    "prisma": "^6.11.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
