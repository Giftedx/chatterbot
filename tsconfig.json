{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
  "types": ["node"],
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
  "src/**/__tests__/**",
  "src/test-setup.ts",
  "src/test/**"
  ]
}
