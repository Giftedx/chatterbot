{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "src/services/ultra-intelligence/**/*",
    "src/services/autonomous-reasoning/**/*",
    "src/services/enhanced-intelligence/index.ts",
    "src/services/advanced-reasoning/**/*"
  ]
}
